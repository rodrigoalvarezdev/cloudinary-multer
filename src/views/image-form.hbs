<div class="row">
  <div class="col-md-5">
    <div class="card">
      <div class="card-body">
        <form action="/images/add" method="POST" enctype="multipart/form-data">
          <div class="form-group mb-3">
              <input name="title" class="form-control" type="text" placeholder="image title" />
          </div>
           <div class="form-group mb-3">
              <textarea name="description" class="form-control" placeholder="description" ></textarea>
          </div>
          <div class="input-group mb-3">
              <div class="custom-file">
                 
                  <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
                  
              </div>
          </div>
          <input type="submit" class="btn btn-primary" value="upload your photo">
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <table class="table">
      <thead>
        <tr>
          <th>title</th>
          <th>description</th>
          <th>operations</th>
        </tr>
      </thead>
      <tbody>
        {{#each photos}}
          <tr>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>
              <a href="{{imageURL}}" target="_blank" class="btn btn-primary">view</a>
              <a href="/images/delete/{{_id}}" class="btn btn-danger">delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>